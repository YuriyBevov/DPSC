section.situations.cmn
  .cmn__wrapper.situations__wrapper
    h2.cmn__title.situations__title Ситуации
    p.cmn__text.situations__desc Попроси помощь в чате!

    .situations-swiper-container
      .swiper-wrapper
        -
          const slides = [
            {text: 'Если кончился бензин'},
            {text: 'Если подперли и не оставили номер'},
            {text: 'Если нужно прикурить'},
            {text: 'Если нужно отбуксировать'},
            {text: 'Если нужно помочь заменить колесо'},
          ];

        each slide in slides
          .swiper-slide
            p.cmn__text= slide.text
            svg(width="12" height="16")
              use(xlink:href="#icon-arr-down")

    a(href="#").situations__btn
      svg(width="24" height="28")
        use(xlink:href="#icon-tg")
      span ДПС-Контроль 
      svg(width="10" height="12")
        use(xlink:href="#icon-arr_long")
      span Сегодня
      