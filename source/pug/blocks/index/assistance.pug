mixin phoneBtn(phone)
  a.cmn__phoneBtn(href=phone) 
    svg(width="25" height="25")
      use(xlink:href="#icon-phone")
    span Вызов

section.assistance.cmn
  .cmn__wrapper
    h2.cmn__title.assistance__title Оперативная помощь
    p.cmn__text.assistance__desc Решить критическую ситуацию здесь и сейчас.

    ul.assistance__list
      -
        const cards = [
          {title: 'Завести авто', desc: 'Прикурить, заправить, починить. Заводим в 100% случаев.', url: './assets/img/card1', phone:'tel: +79502995656'},
          {title: 'Шиномонтаж выезд', desc: 'Смена шин, ремонт колёс, тормозов, боковых порезов на дороге.', url: './assets/img/card2', phone:'tel: +79084404911'},
          {title: 'Открыть машину', desc: 'Открыть машину без ключей. Разблочить сигнализацию.', url: './assets/img/card3', phone:'tel: +79244374700' },
          {title: 'Эвакуатор', desc: 'Заказать эвакуатор или буксировку', url: './assets/img/card4', phone:'tel: +79146581033'},
          {title: 'Автоэлектрик', desc: 'Решить проблемы с электрикой', url: './assets/img/card5', phone:'tel: +79024830059'},
          {title: 'Сканер Check', desc: 'Выяснить, почему загореглась лампочка Check Engine', url: './assets/img/card6', phone:'tel: +79510001580'},
          {title: 'Доставка акума', desc: 'Привезем новый аккумулятор', url: './assets/img/card7', phone:'tel: +74232918518'},
        ];
      each card in cards
        li.assistance__card
          .assistance__card-avatar  
            picture
              source(type="image/webp" srcset=card.url + '@1x.webp 1x,' + card.url + '@2x.webp 2x')
              img(src=card.url + '@1x.jpg' srcset=card.url + '@2x.jpg 2x' alt=card.title)
            .assistance__card-rate
              svg(width="16" height="16")
                use(xlink:href="#icon-star")
              span 4.8
          .assistance__card-desc
            h3= card.title
            p= card.desc
          .assistance__card-link-box
            //include ../../components/phoneBtn.pug
            +phoneBtn(card.phone)

      li.assistance__card.assistance__card--cleaning
        .assistance__card-avatar  
          picture
            source(type="image/webp" srcset='./assets/img/card8@1x.webp 1x, ./assets/img/card8@2x.webp 2x')
            img(src='./assets/mg/card8@1x.jpg' srcset='./assets/img/card8@2x.jpg 2x' alt="Помыть машину")
          .assistance__card-rate
            svg(width="16" height="16")
              use(xlink:href="#icon-star")
            span 4.8
        .assistance__card-desc
            h3 Помыть машину
            p Выбрать автомойку по району и ценам. Смотрите все автомойки.
        .assistance__card-link-box
          button.assistance__card-link.assistance__card-link--more(href="#" aria-label="Показать автомойки")
            svg(width="7" height="10")
              use(xlink:href="#icon-arr_short")
            