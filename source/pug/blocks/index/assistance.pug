mixin phoneBtn(phone, target)
  a.cmn__phoneBtn(href=phone onclick=target) 
    svg(width="25" height="25")
      use(xlink:href="#icon-phone")
    span Вызов

section.assistance.cmn
  .cmn__wrapper
    h2.cmn__title.assistance__title Оперативная помощь
    p.cmn__text.assistance__desc Решить критическую ситуацию здесь и сейчас.

    ul.assistance__list
      -
        const cards = [
          {title: 'Завести авто', desc: 'Прикурить, заправить, починить. Заводим в 100% случаев.', url: './assets/img/card1', phone:'tel: +79502995656', target: "ym(82655017,'reachGoal','call1'); return true;"},
          {title: 'Шиномонтаж выезд', desc: 'Смена шин, ремонт колёс, тормозов, боковых порезов на дороге.', url: './assets/img/card2', phone:'tel: +79084404911', target: "ym(82655017,'reachGoal','call12'); return true;"},
          {title: 'Открыть машину', desc: 'Открыть машину без ключей. Разблочить сигнализацию.', url: './assets/img/card3', phone:'tel: +79244374700', target: "ym(82655017,'reachGoal','call3'); return true;" },
          {title: 'Эвакуатор', desc: 'Заказать эвакуатор или буксировку', url: './assets/img/card4', phone:'tel: +79146581033', target: "ym(82655017,'reachGoal','call4'); return true;"},
          {title: 'Автоэлектрик', desc: 'Решить проблемы с электрикой', url: './assets/img/card5', phone:'tel: +79024830059', target: "ym(82655017,'reachGoal','call5'); return true;"},
          {title: 'Сканер Check', desc: 'Выяснить, почему загореглась лампочка Check Engine', url: './assets/img/card6', phone:'tel: +79510001580', target: "ym(82655017,'reachGoal','call6'); return true;"},
          {title: 'Доставка акума', desc: 'Привезем новый аккумулятор', url: './assets/img/card7', phone:'tel: +74232918518', target: "ym(82655017,'reachGoal','call7'); return true;"},
        ];
      each card in cards
        li.assistance__card
          .assistance__card-avatar  
            picture
              source(type="image/webp" srcset=card.url + '@1x.webp 1x,' + card.url + '@2x.webp 2x')
              img(src=card.url + '@1x.jpg' srcset=card.url + '@2x.jpg 2x' alt=card.title)
            .assistance__card-rate
              svg(width="16" height="16")
                use(xlink:href="#icon-star")
              span 4.8
          .assistance__card-desc
            h3= card.title
            p= card.desc
          .assistance__card-link-box
            +phoneBtn(card.phone, card.target)

      li.assistance__card.assistance__card--cleaning
        .assistance__card-avatar  
          picture
            source(type="image/webp" srcset='./assets/img/card8@1x.webp 1x, ./assets/img/card8@2x.webp 2x')
            img(src='./assets/mg/card8@1x.jpg' srcset='./assets/img/card8@2x.jpg 2x' alt="Помыть машину")
          .assistance__card-rate
            svg(width="16" height="16")
              use(xlink:href="#icon-star")
            span 4.8
        .assistance__card-desc
            h3 Помыть машину
            p Выбрать автомойку по району и ценам. Смотрите все автомойки.
        .assistance__card-link-box
          button.assistance__card-link.assistance__card-link--more(href="#" aria-label="Показать автомойки")
            svg(width="7" height="10")
              use(xlink:href="#icon-arr_short")
            