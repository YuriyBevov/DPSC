.foodModal.modal
  .modal__wrapper.foodModal__wrapper
    button.foodModal__close.js-food-modal-close-btn
      svg(width="10" height="11")
        use(xlink:href="#icon-arr_long")
      span Назад
    
    ul.foodModal__list
      each cafe in cafes
        li.foodModal__item
          .foodModal__item-header
            .foodModal__item-avatar
              img(src=cafe.url + '@1x.png' srcset=cafe.url + '@2x.png 2x' alt=cafe.title)
              
            .foodModal__item-content
              h2.cmn__text.cmn__text--bold= cafe.text
              button.js-show-food-menu-btn.foodModal__item-content-btn.closed Свернуть меню
                
                svg(width="8" height="10")
                  use(xlink:href="#icon-arr")
          
          .foodModal-swiper-container
            .swiper-wrapper
              each menu in cafe.menus
                .swiper-slide
                  img(src=menu.url + '@1x.jpg' srcset=menu.url + '@2x.jpg 2x' alt="меню")
        

            
              

